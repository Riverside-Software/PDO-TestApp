    method protected void PopulateComboBoxes():
	    define variable bands       as Infragistics.Win.UltraWinGrid.BandsCollection no-undo.
		define variable band        as Infragistics.Win.UltraWinGrid.UltraGridBand no-undo.
        define variable i           as integer no-undo.
        define variable type        as System.Type no-undo.
        define variable enumValues  as System.Array no-undo.
  
		cboSelectBand:Items:Clear().
		cboSelectBand:Items:Add("All").       
        bands = this-object:fGrid:DisplayLayout:Bands.
		do i = 0 to bands:Count - 1:
		    band = cast(bands:getItem(i),Infragistics.Win.UltraWinGrid.UltraGridBand).	
		    cboSelectBand:Items:Add(band).
		end.
		cboSelectBand:SelectedIndex = 0.
		
		cboBorderStyle:Items:Clear().
        type = Progress.Util.TypeHelper:GetType("Infragistics.Win.UIElementBorderStyle").
        enumValues = System.Enum:GetValues(type).
        
        do i = 0 to enumValues:Length - 1:
			cboBorderStyle:Items:Add( enumValues:GetValue(i) ).
		end.
    end method.
   
