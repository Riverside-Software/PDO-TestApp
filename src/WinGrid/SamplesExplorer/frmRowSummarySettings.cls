	METHOD PRIVATE VOID cboSelectBand_SelectedIndexChanged( INPUT sender AS System.Object, INPUT e AS System.EventArgs ):
		define variable band as Infragistics.Win.UltraWinGrid.UltraGridBand no-undo.
        
		/*	Update the UI to reflect the current state of the control */

		/*	AllowRowSummaries */
		if not type-of(cboSelectBand:SelectedItem,Infragistics.Win.UltraWinGrid.UltraGridBand) then
		do:
		    if Progress.Util.EnumHelper:AreEqual(fGrid:DisplayLayout:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:Default) then
                optDefault:Checked = true.
		    else if Progress.Util.EnumHelper:AreEqual(fGrid:DisplayLayout:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:True) then
                optTrue:Checked = true.
		    else if Progress.Util.EnumHelper:AreEqual(fGrid:DisplayLayout:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:False) then
                optFalse:Checked = true.
	        else if Progress.Util.EnumHelper:AreEqual(fGrid:DisplayLayout:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:BasedOnDataType) then
                optBasedOnDataType:Checked = true.
	        else if Progress.Util.EnumHelper:AreEqual(fGrid:DisplayLayout:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:SingleSummary) then
                optSingleSummary:Checked = true.
	        else if Progress.Util.EnumHelper:AreEqual(fGrid:DisplayLayout:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:SingleSummaryBasedOnDataType) then
                optSingleSummaryBasedOnDataType:Checked = true.
			
			/*	Appearances */
			if optSummaryFooterAppearance:Checked then
				PropertyGrid1:SelectedObject = fGrid:DisplayLayout:Override:SummaryFooterAppearance.
			else if optSummaryFooterCaptionAppearance:Checked then
				PropertyGrid1:SelectedObject = fGrid:DisplayLayout:Override:SummaryFooterCaptionAppearance.
			else if optSummaryValueAppearance:Checked then
				PropertyGrid1:SelectedObject = fGrid:DisplayLayout:Override:SummaryValueAppearance.

			/*	SummaryFooterCaptionVisible */			
			if Progress.Util.EnumHelper:AreEqual(fGrid:DisplayLayout:Override:SummaryFooterCaptionVisible,Infragistics.Win.DefaultableBoolean:Default) then
                chkCaptions:CheckState = System.Windows.Forms.CheckState:Indeterminate.
			else if Progress.Util.EnumHelper:AreEqual(fGrid:DisplayLayout:Override:SummaryFooterCaptionVisible,Infragistics.Win.DefaultableBoolean:True) then
                chkCaptions:CheckState = System.Windows.Forms.CheckState:Checked.
			else if Progress.Util.EnumHelper:AreEqual(fGrid:DisplayLayout:Override:SummaryFooterCaptionVisible,Infragistics.Win.DefaultableBoolean:False) then
                chkCaptions:CheckState = System.Windows.Forms.CheckState:UnChecked.
		end.
		else
		do:
		    band = cast(cboSelectBand:SelectedItem,Infragistics.Win.UltraWinGrid.UltraGridBand).
			if not valid-object(band) then
				return.

		    if Progress.Util.EnumHelper:AreEqual(band:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:Default) then
                optDefault:Checked = true.
		    else if Progress.Util.EnumHelper:AreEqual(band:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:True) then
                optTrue:Checked = true.
		    else if Progress.Util.EnumHelper:AreEqual(band:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:False) then
                optFalse:Checked = true.
	        else if Progress.Util.EnumHelper:AreEqual(band:Override:AllowRowSummaries,Infragistics.Win.UltraWinGrid.AllowRowSummaries:BasedOnDataType) then
